<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.syleiman.gingermoney.ui.activities.login.fragments.masterPassword.viewModel.MasterPasswordViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.login.fragments.masterPassword.view.MasterPasswordFragment">

        <EditText
            android:id="@+id/passwordField"

            android:text="@={viewModel.password}"
            android:maxLength="@{viewModel.passwordMaxLen}"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/loginButton"

            android:onClick="@{() -> viewModel.onLoginButtonClick()}"
            android:enabled="@{viewModel.buttonsEnabled}"

            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/useFingerprintButton"

            android:onClick="@{() -> viewModel.onUseFingerprintButtonClick()}"

            android:enabled="@{viewModel.buttonsEnabled}"
            android:visibility="@{viewModel.fingerprintButtonVisible}"

            android:text="Use fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>