<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/gray"
                android:width="@dimen/strokeThin"/>
            <corners
                android:topLeftRadius="@dimen/editTextCorners"
                android:bottomLeftRadius="@dimen/editTextCorners" />
            <solid
                android:color="@color/textOnPrimary" />
        </shape>
    </item>
    <item
        android:top="@dimen/strokeThin"
        android:bottom="@dimen/strokeThin"
        android:left="@dimen/editTextCorners">

        <shape>
            <stroke
                android:width="@dimen/strokeThin"
                android:color="@color/textOnPrimary" />
        </shape>
    </item>
</layer-list>