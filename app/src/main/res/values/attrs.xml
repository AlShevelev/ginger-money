<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CurrentPage">
        <attr name="currentPage_width" format="dimension"/>
        <attr name="currentPage_height" format="dimension"/>
        <attr name="currentPage_color" format="color" />
        <attr name="currentPage_index" format="integer" />
        <attr name="currentPage_totalPages" format="integer" />
    </declare-styleable>

    <declare-styleable name="DrawableRadioButton">
        <attr name="drawableRadioButton_icon" format="reference" />
        <attr name="drawableRadioButton_iconTint" format="reference" />
        <attr name="drawableRadioButton_iconMargin" format="dimension" />
        <attr name="drawableRadioButton_iconSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="IconButton">
        <attr name="iconButton_icon" format="reference" />
        <attr name="iconButton_iconTint" format="reference" />
        <attr name="iconButton_iconMargin" format="dimension" />
        <attr name="iconButton_iconSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ImageButtonFixedIconSize">
        <attr name="imageButton_icon" format="reference" />
        <attr name="imageButton_iconWidth" format="dimension" />
        <attr name="imageButton_iconHeight" format="dimension" />
        <attr name="imageButton_tint" format="reference" />
    </declare-styleable>

    <declare-styleable name="SelectColorGridItem">
        <attr name="selectColorGridItem_markColor" format="color" />
        <attr name="selectColorGridItem_fillColor" format="color" />
        <attr name="selectColorGridItem_strokeColor" format="color" />
    </declare-styleable>
</resources>