<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/textOnPrimary</item>
    </style>

    <!-- Text on primary -->
    <style name="App.Text.OnPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textOnPrimary</item>
    </style>

    <!-- Toast -->
    <style name="App.Toast.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toast (warning) -->
    <style name="App.Toast.Text.Warning" parent="App.Toast.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Root screen -->
    <style name="RootActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/activity_root_bcg</item>
    </style>

    <!-- Buttons on Setup and Login screens -->
    <style name="App.Start.Buttons" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/setup_buttons</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- Login buttons on Login screens -->
    <style name="App.Login.Login.Button" parent="App.Start.Buttons">
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
        <item name="android:background">@drawable/login_login_button_bcg</item>
    </style>

    <!-- Password on Setup and Login screens -->
    <style name="App.Start.EditText.Password" parent="TextAppearance.AppCompat">
        <item name="android:inputType">textPassword</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/setup_edit_text_bcg</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- RadioButton on Setup and Login screens -->
    <style name="App.Start.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/textOnPrimary</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
    </style>

    <!-- Theme for Setup & Login screen -->
    <style name="StartActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/textOnPrimary</item>
    </style>

    <!-- Setup screen -->
    <style name="App.Setup.Welcome.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="App.Setup.Title.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="App.Setup.Explanation.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!-- Login screen -->
    <style name="App.Login.Fingerprint.Explanation" parent="App.Setup.Title.Text">
        <item name="android:textAlignment">center</item>
    </style>
</resources>
