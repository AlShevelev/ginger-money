<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/textOnPrimary</item>
    </style>

    <!-- Text on primary -->
    <style name="App.Text.OnPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textOnPrimary</item>
    </style>

    <!-- Common text label -->
    <style name="App.TextField.Label" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.TextField.Label.End" parent="App.TextField.Label">
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="App.TextField.Label.Large" parent="App.TextField.Label">
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
    </style>

    <!-- No data stub - text -->
    <style name="App.Activity.NoData.Text" parent="App.Text.OnPrimary">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/textSizeLargeLess</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Setup screen -->
    <style name="App.TextField.Text" parent="TextAppearance.AppCompat">
        <item name="android:inputType">text</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/bcg_setup_edit_text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/textFieldPadding</item>
    </style>

    <style name="App.TextField.Text.TextWithIcon" parent="App.TextField.Text">
        <item name="android:background">@null</item>
    </style>

    <!-- Login, Save etc. - large orange buttons -->
    <style name="App.ActionButton" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/setup_button</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
        <item name="android:background">@drawable/bcg_login_login_button</item>
    </style>

    <!-- Screen header - title -->
    <style name="App.Activity.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primary</item>
    </style>

    <!-- Screen header - title -->
    <style name="App.Activity.Header.Title" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <!-- Screen header - normal text -->
    <style name="App.Activity.Header.Text" parent="App.Activity.Header.Title">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <!-- Toast -->
    <style name="App.Toast.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toast (warning) -->
    <style name="App.Toast.Text.Warning" parent="App.Toast.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Root screen -->
    <style name="App.Activity.Root.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bcg_activity_root</item>
    </style>

    <!-- Buttons on Setup and Login screens -->
    <style name="App.Activity.Start.Button" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/setup_button</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- Password on Setup and Login screens -->
    <style name="App.Activity.Start.EditText.Password" parent="App.TextField.Text">
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">@dimen/setupPasswordFieldPadding</item>
    </style>

    <!-- RadioButton with currency (light) -->
    <style name="App.CurrencyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/textOnPrimary</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
    </style>

    <!-- RadioButton with currency (dark) -->
    <style name="App.CurrencyRadioButton.Dark" parent="App.CurrencyRadioButton">
        <item name="android:buttonTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- RadioButton with currency (dark) -->
    <style name="App.CurrencyRadioButton.Dark.Small" parent="App.CurrencyRadioButton.Dark">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <!-- RadioButton with currency (for a dialog on the Settings screen) -->
    <style name="App.CurrencyRadioButton.SettingsDialog" parent="App.CurrencyRadioButton.Dark">
        <item name="android:buttonTint">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Theme for Setup & Login screen -->
    <style name="App.Activity.Start.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/textOnPrimary</item>
    </style>

    <!-- Setup screen -->
    <style name="App.Activity.Setup.Welcome.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="App.Activity.Setup.Title.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="App.Activity.Setup.Explanation.Text" parent="App.Text.OnPrimary">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!-- Login screen -->
    <style name="App.Activity.Login.Fingerprint.Explanation" parent="App.Activity.Setup.Title.Text">
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Theme for Main screen -->
    <style name="App.Activity.Main.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/textOnPrimary</item>
    </style>

    <!-- Theme for dialogs on Main screen -->
    <style name="App.Activity.Main.Dialog.Theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>  <!--Buttons-->
        <item name="android:textColorPrimary">@color/black</item> <!--Text-->
    </style>

    <!-- Buttons on the Settings page -->
    <style name="App.Activity.Main.Settings.Button" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeNormalLess</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/main_settings_button</item>
    </style>

    <style name="App.AmountKeyboard.Button" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/bcg_amount_keyboard_button</item>
    </style>

    <style name="amountKeyboardAnimation">
        <item name="android:windowEnterAnimation">@anim/amount_keyboard_show</item>
        <item name="android:windowExitAnimation">@anim/amount_keyboard_hide</item>
    </style>
</resources>
